<div class="col-xs-6 col-sm-4 placeholder">
  <%= link_to link do %>
    <% if !defined?(image_src) %>
      <%= image_tag 'default.png', class: 'img-responsive', size: '100x100' %>
    <% else %>
      <%= image_tag image_src, class: 'img-responsive', size: '100x100' %>
    <% end %>
  <% end %>
  <h4><%= label %></h4>
  <span class="text-muted"><%= text %></span>
</div>
